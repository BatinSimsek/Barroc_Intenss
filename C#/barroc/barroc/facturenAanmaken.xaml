<Window x:Class="barroc.facturenAanmaken"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:barroc"
        mc:Ignorable="d"
        Title="facturenAanmaken" Height="280" Width="300.382">
    <StackPanel>
        <StackPanel>
            <Label HorizontalAlignment="Center" FontWeight="Bold" Content="Factuur Aanmaken" FontSize="15"/>
            <Label Content="Lease_Id:"/>
            <TextBox x:Name="leaseTextbox" FontSize="15" Margin="10,0,80,0" TextChanged="leaseTextbox_TextChanged"></TextBox>
            <Label Content="Klant_Id:"/>
            <TextBox x:Name="customerTextBox" FontSize="15" Margin="10,0,80,0"></TextBox>
            <Label Content="Prijs"/>
            <TextBox x:Name="priceTextBox" FontSize="15" Margin="10,0,80,10"/>
            <Button x:Name="sendDataButton" Content="Aanmaken" FontSize="15" Margin="10,0,80,0" Height="38" Click="sendDataButton_Click"/>
        </StackPanel>
        <Label Content="" x:Name="messageLabel"/>
    </StackPanel>
</Window>
